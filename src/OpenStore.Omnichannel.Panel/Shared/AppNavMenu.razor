                        <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tags"></Icon>
                    </span>
                    <span class="menu-text">@L["Menu.Products"]</span>
                    <span class="menu-caret">
                        <b class="caret"></b>
                    </span>
                </a>
