<section class="section-content padding-y">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="alert alert-warning mt-3">
                    <p class="icontext">
                        <i class="icon text-success fa fa-truck"></i> @L["Checkout.Warning.EmptyCart"]
                    </p>
                </div>

                <a asp-controller="Home" asp-action="Index" class="btn btn-light">
                    <i class="fa fa-chevron-left"></i> @L["Checkout.Button.ContinueShopping"]
                </a>
            </div>
        </div>
    </div>
</section>