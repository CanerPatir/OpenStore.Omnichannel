<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <header class="border-bottom mb-4 pb-3">
                    <div class="form-inline">
                        @* <span class="mr-md-auto">32 Items found </span> *@
                        <select class="mr-2 form-control">
                            <option>Latest items</option>
                            <option>Trending</option>
                            <option>Most Popular</option>
                            <option>Cheapest</option>
                        </select>
                    </div>
                </header>
                <div class="row" id="products-container">
                </div>
                <div id="products-loading">
                    <partial name="_LoadingIndicator"/>
                </div>
            </main>
        </div>
    </div>
</section>

<script id="product-box-tmpl" type="text/x-jsrender">
<div class="col-md-3">
    <a href="product/{{:handle}}" target="_blank">
      <figure class="card card-product-grid">
          <div class="img-wrap">
              <img src="{{:photoUrl}}" alt="{{:handle}}">
          </div>  
          <figcaption class="info-wrap">
              <div class="fix-height">
                  <a href="product/{{:handle}}" class="title">{{:title}}</a>
                  <div class="price-wrap mt-2">
                      <span class="price">{{:price}}</span>
                      <span class="compare-at-price">{{:compareAtPrice}}</span>
                  </div>  
              </div>
          </figcaption>
      </figure>
    </a>
</div>  
</script>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsrender/1.0.11/jsrender.min.js"
            asp-fallback-src="~/storefront/js/jsrender.min.js"></script>
    <environment include="Development">
        <script src="~/storefront/js/jquery.infiniteScrollWithTemplate.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/storefront/js/jquery.infiniteScrollWithTemplate.min.js"></script>
    </environment>
    <script src="~/Views/Catalog/AllProducts.cshtml.js"></script>
}