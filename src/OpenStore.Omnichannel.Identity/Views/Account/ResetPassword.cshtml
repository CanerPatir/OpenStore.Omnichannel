@model OpenStore.Omnichannel.Identity.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = L["Account.PasswordReset"];
}

<div class="pt-32pt pt-sm-64pt pb-32pt">
    <div class="container page__container">
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="col-md-5 p-0 mx-auto" role="form">
            <partial name="AccountValidationSummary"/>
            <input asp-for="Code" type="hidden"/>
            <div class="form-group mb-24pt">
                <label class="form-label" asp-for="Email">@L["Account.Register.Email"]</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-24pt">
                <label class="form-label" asp-for="Password">@L["Account.Register.Password"]</label>
                <input asp-for="Password" class="form-control" autocomplete="new-password"./>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-24pt">
                <label class="form-label" asp-for="ConfirmPassword">@L["Account.Register.ConfirmPassword"]</label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"./>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button class="btn btn-primary"> @L["Account.PasswordReset"]</button>
            </div>
        </form>
    </div>
</div>