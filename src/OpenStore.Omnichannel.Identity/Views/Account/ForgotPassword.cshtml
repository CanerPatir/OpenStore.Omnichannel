@model OpenStore.Omnichannel.Identity.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = VL["ForgotPassword.Title"];
}

<div class="container register">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="col-md-5 p-0 mx-auto">
        <partial name="AccountValidationSummary"/>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Email">
                @VL["ForgotPassword.Email"]
            </label>
            <input asp-for="Email" class="form-control" placeholder="@VL["ForgotPassword.Email"]">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary"> @VL["ForgotPassword.Button"]</button>
            <div class="text-center text-muted">
                @VL["ForgotPassword.DontHaveAccount"] <a asp-action="Register">@VL["ForgotPassword.Login"]</a>
            </div>
        </div>
    </form>
</div>