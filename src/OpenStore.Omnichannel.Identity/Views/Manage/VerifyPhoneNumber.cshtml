@model OpenStore.Omnichannel.Identity.ViewModels.Manage.VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = L["Account.Manage.VerifyPhoneNumber"];
}
<div class="pt-32pt pt-sm-64pt pb-32pt">
    <div class="container page__container">
        <form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <input asp-for="PhoneNumber" type="hidden"/>
            <h4>Add a phone number.</h4>
            <h5>@ViewData["Status"]</h5>
            <hr/>
            <partial name="AccountValidationSummary"/>
            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> @L["Account.Manage.VerifyPhoneNumber"] </button>
            </div>
        </form>
    </div>
</div>