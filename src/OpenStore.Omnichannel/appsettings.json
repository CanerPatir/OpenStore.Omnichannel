{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Data": {
    "ActiveConnection": "SqLite", // PostgreSql, MySql, SqLite, MsSql
    "ConnectionStrings": {
      // "Default": "host=localhost;database=DatabaseName;user id=root;password=Qwer1234",
      // "Default": "Server=localhost;Database=School;User=root;Password=Qwer1234;",
      "Default": "Data Source=app.db",
      "ReadReplica": "Data Source=app.db" // nullable
    },
    "OutBoxEnabled": true,
    "OutBoxFetchSize": 2000
  },
  "IdentityConfiguration": {
    "SessionExpireTimeInMinutes": 60,
    "Authority": "https://localhost:5001/identity/",
    "WebPostLogoutRedirectUris": [
      "https://localhost:5005/signout-callback-oidc"
    ],
    "WebRedirectUris": [
      "https://localhost:5005/signin-oidc"
    ],
    "PanelPostLogoutRedirectUris": [
      "https://localhost:5003/authentication/logout-callback"
    ],
    "PanelRedirectUris": [
      "https://localhost:5003/authentication/login-callback"
    ]
  }
}
